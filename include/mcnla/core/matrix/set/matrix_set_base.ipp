#ifndef MCNLA_CORE_MATRIX_SET_MATRIX_SET_IPP_
#define MCNLA_CORE_MATRIX_SET_MATRIX_SET_IPP_

#include <mcnla/core/matrix/set/matrix_set_base.hpp>

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
//  The MCNLA namespace.
//
namespace mcnla {

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
//  The matrix namespace.
//
namespace matrix {

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
/// @brief  Default constructor.
///
template <class _Derived>
MatrixSet<_Derived>::MatrixSet() noexcept {}

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
/// @brief  Gets the number of rows of matrix.
///
template <class _Derived>
index_t MatrixSet<_Derived>::getNrow() const noexcept { return this->derived().getNrow(); }

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
/// @brief  Gets the number of column of matrix.
///
template <class _Derived>
index_t MatrixSet<_Derived>::getNcol() const noexcept { return this->derived().getNcol(); }

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
/// @brief  Gets the number of matrices.
///
template <class _Derived>
index_t MatrixSet<_Derived>::getNmat() const noexcept { return this->derived().getNmat(); }

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
/// @brief  Gets a matrix.
///
template <class _Derived>
typename MatrixSet<_Derived>::MatrixType MatrixSet<_Derived>::getMatrix( const index_t idx ) noexcept {
  return this->derived().getMatrix(idx);
}

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
/// @copydoc  getMatrix
///
template <class _Derived>
const typename MatrixSet<_Derived>::MatrixType MatrixSet<_Derived>::getMatrix( const index_t idx ) const noexcept {
  return this->derived().getMatrix(idx);
}

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
/// @copydoc  getMatrix
///
template <class _Derived>
typename MatrixSet<_Derived>::MatrixType MatrixSet<_Derived>::operator()( const index_t idx ) noexcept {
  return this->derived().getMatrix(idx);
}

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
/// @copydoc  getMatrix
///
template <class _Derived>
const typename MatrixSet<_Derived>::MatrixType MatrixSet<_Derived>::operator()( const index_t idx ) const noexcept {
  return this->derived().getMatrix(idx);
}

}  // namespace matrix

}  // namespace mcnla

#endif  // MCNLA_CORE_MATRIX_SET_MATRIX_SET_IPP_
