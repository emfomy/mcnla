#ifndef ISVD_MATRIX_MATRIX_DATA_IPP_
#define ISVD_MATRIX_MATRIX_DATA_IPP_

#include <isvd/matrix/matrix.hpp>

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
//  The iSVD namespace.
//
namespace isvd {

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
/// Default constructor.
///
template <typename _Type>
MatrixData<_Type>::MatrixData() noexcept {}

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
/// Copy constructor.
///
template <typename _Type>
MatrixData<_Type>::MatrixData( const MatrixData &other ) noexcept {}

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
/// Move constructor.
///
template <typename _Type>
MatrixData<_Type>::MatrixData( MatrixData &&other ) noexcept {}

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
/// Default destructor.
///
template <typename _Type>
MatrixData<_Type>::~MatrixData() noexcept {}

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
/// Copy assignment operator.
///
template <typename _Type>
MatrixData<_Type>& MatrixData<_Type>::operator=( const MatrixData &other ) noexcept { return *this; }

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
/// Move assignment operator.
///
template <typename _Type>
MatrixData<_Type>& MatrixData<_Type>::operator=( MatrixData &&other ) noexcept { return *this; }

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
/// Gets the number of rows.
///
template <typename _Type>
index_t MatrixData<_Type>::getNrow() const noexcept { return 0; }

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
/// Gets the number of columns.
///
template <typename _Type>
index_t MatrixData<_Type>::getNcol() const noexcept { return 0; }

}  // namespace isvd

#endif  // ISVD_MATRIX_MATRIX_DATA_IPP_
